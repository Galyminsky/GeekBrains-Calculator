<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p4"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/screen"
        style="@android:style/Widget.Material.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:text="@string/Result"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/btn_symbol"
        android:textSize="40sp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="-400dp"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/ac"
            android:textColor="@color/special_botton"
            android:textSize="20sp" />

        <Button
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/trash"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/trash2"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/dev"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_7"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_8"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_9"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/x"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_4"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_5"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_6"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/min"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_1"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_2"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_3"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/plus"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/_0"
            android:textColor="@color/btn_number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/point"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/ans"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:onClick="ButtonClick"
            android:text="@string/equal"
            android:textColor="@color/btn_symbol"
            android:textSize="20sp" />

    </GridLayout>


    <TextView
        android:id="@+id/txtView"
        style="@android:style/Widget.Material.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/galyminsky_homework_3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>